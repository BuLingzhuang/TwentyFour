<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bulingzhuang.twentyfour.MainActivity">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_icon"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_icon"
        app:layout_constraintStart_toEndOf="@id/iv_icon"
        app:layout_constraintTop_toTopOf="@id/iv_icon"/>


    <LinearLayout
        android:id="@+id/ll_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="36dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/iv_icon">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_card_0"
                android:layout_width="66dp"
                android:layout_height="88dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="3dp"
                android:elevation="1dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/iv_card_0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/card_back_1"/>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_card_1"
                android:layout_width="66dp"
                android:layout_height="88dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="3dp"
                android:elevation="1dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/iv_card_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/card_back_1"/>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_card_2"
                android:layout_width="66dp"
                android:layout_height="88dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="3dp"
                android:elevation="1dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/iv_card_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/card_back_1"/>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_card_3"
                android:layout_width="66dp"
                android:layout_height="88dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="3dp"
                android:elevation="1dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/iv_card_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/card_back_1"/>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/ll_keyboard"
        app:layout_constraintTop_toBottomOf="@id/ll_card"
        tools:text="(12-6)*(3-1)=24"/>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/start"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_copy"
                style="@style/btn_keyboard"
                android:text="@string/copy"/>

            <Button
                android:id="@+id/btn_ac"
                style="@style/btn_keyboard_15"
                android:text="AC"/>

            <Button
                android:id="@+id/btn_c"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="3dp"
                android:layout_weight="1.5"
                android:backgroundTint="@color/colorPrimary"
                android:text="C"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_1"
                style="@style/btn_keyboard"
                android:text="1"/>

            <Button
                android:id="@+id/btn_2"
                style="@style/btn_keyboard_15"
                android:text="2"/>

            <Button
                android:id="@+id/btn_3"
                style="@style/btn_keyboard_15"
                android:text="3"/>

            <Button
                android:id="@+id/btn_add"
                style="@style/btn_keyboard_accent"
                android:text="+"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_4"
                style="@style/btn_keyboard"
                android:text="4"/>

            <Button
                android:id="@+id/btn_5"
                style="@style/btn_keyboard_15"
                android:text="5"/>

            <Button
                android:id="@+id/btn_6"
                style="@style/btn_keyboard_15"
                android:text="6"/>

            <Button
                android:id="@+id/btn_subtraction"
                style="@style/btn_keyboard_accent"
                android:text="-"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_7"
                style="@style/btn_keyboard"
                android:text="7"/>

            <Button
                android:id="@+id/btn_8"
                style="@style/btn_keyboard_15"
                android:text="8"/>

            <Button
                android:id="@+id/btn_9"
                style="@style/btn_keyboard_15"
                android:text="9"/>

            <Button
                android:id="@+id/btn_multiplication"
                style="@style/btn_keyboard_accent"
                android:text="*"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_10"
                style="@style/btn_keyboard"
                android:text="10"/>

            <Button
                android:id="@+id/btn_11"
                style="@style/btn_keyboard_15"
                android:text="11"/>

            <Button
                android:id="@+id/btn_12"
                style="@style/btn_keyboard_15"
                android:text="12"/>

            <Button
                android:id="@+id/btn_division"
                style="@style/btn_keyboard_accent"
                android:text="/"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_13"
                style="@style/btn_keyboard"
                android:text="13"/>

            <Button
                android:id="@+id/btn_bracket_start"
                style="@style/btn_keyboard"
                android:text="("/>

            <Button
                android:id="@+id/btn_bracket_end"
                style="@style/btn_keyboard_15"
                android:text=")"/>

            <Button
                android:id="@+id/btn_calculate"
                style="@style/btn_keyboard_15"
                android:text="="/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
